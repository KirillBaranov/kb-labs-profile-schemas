{
  "name": "@kb-labs/profile-schemas",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./profile": "./src/profile.schema.json",
    "./rules": "./src/rules.schema.json",
    "./profile.io": "./src/profile.io.json",
    "./profile.diff": "./src/profile.diff.json",
    "./profile.cap": "./src/profile.cap.json",
    "./products/review": "./src/products/review.schema.json",
    "./products/tests": "./src/products/tests.schema.json",
    "./products/docs": "./src/products/docs.schema.json",
    "./products/assistant": "./src/products/assistant.schema.json"
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm -s schemas:check && vitest run -c ../../vitest.config.ts",
    "test:watch": "vitest -c ../../vitest.config.ts",
    "schemas:check": "tsx src/validate.ts",
    "ci": "pnpm -s lint && pnpm -s type-check && pnpm -s build && pnpm -s schemas:check"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@kb-labs/devkit": "github:KirillBaranov/kb-labs-devkit#main",
    "@types/node": "^22",
    "tsup": "^8",
    "tsx": "^4.20.5",
    "vitest": "^3"
  }
}