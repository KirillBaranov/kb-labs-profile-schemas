{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.kb-labs.dev/profile/profile-manifest-v1.schema.json",
  "title": "KB Labs Profile Manifest v1",
  "type": "object",
  "properties": {
    "schemaVersion": { "const": "1.0" },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "extends": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "default": []
    },
    "exports": {
      "type": "object",
      "description": "Map of product id (kebab-case) to artifact patterns",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "string" }
            }
          ]
        }
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["schemaVersion", "name", "version", "exports"],
  "additionalProperties": false
}

