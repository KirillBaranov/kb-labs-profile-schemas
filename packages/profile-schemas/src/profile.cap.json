{
  "$id": "https://schemas.kb-labs.dev/profile/profile.cap.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "read": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "write": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "$mode": {
      "enum": [
        "merge",
        "replace"
      ],
      "default": "merge"
    }
  },
  "additionalProperties": false
}