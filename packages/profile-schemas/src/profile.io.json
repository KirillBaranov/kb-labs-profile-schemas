{
  "$id": "https://schemas.kb-labs.dev/profile/profile.io.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Profile IO",
  "type": "object",
  "properties": {
    "$mode": {
      "enum": [
        "merge",
        "replace"
      ]
    },
    "allow": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "deny": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "extensions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+$"
      },
      "uniqueItems": true
    },
    "maxFiles": {
      "type": "integer",
      "minimum": 0
    },
    "maxBytes": {
      "type": "integer",
      "minimum": 0
    },
    "followSymlinks": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false,
  "default": {}
}