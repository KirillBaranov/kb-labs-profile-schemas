{
  "$id": "https://schemas.kb-labs.dev/profile/profile.io.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KB Labs Profile IO Rules",
  "type": "object",
  "properties": {
    "allow": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(?!/)(?!\\.\\.)[^\\s]*$"
      },
      "default": []
    },
    "deny": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(?!/)(?!\\.\\.)[^\\s]*$"
      },
      "default": []
    },
    "extensions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]+$"
      },
      "default": []
    },
    "maxFiles": {
      "type": "integer",
      "minimum": 1
    },
    "maxBytes": {
      "type": "integer",
      "minimum": 1
    },
    "followSymlinks": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false
}