{
  "$id": "https://schemas.kb-labs.dev/profile/profile.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KB Labs Profile",
  "type": "object",
  "required": [
    "name",
    "kind",
    "scope",
    "version",
    "products"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "Reference to JSON Schema meta, useful for editors/validation"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Unique profile name within the repo"
    },
    "kind": {
      "enum": [
        "review",
        "tests",
        "docs",
        "assistant",
        "composite"
      ],
      "description": "Profile kind determines supported product types"
    },
    "scope": {
      "enum": [
        "repo",
        "package",
        "dir"
      ],
      "description": "Scope of the profile (whole repo, specific package, or directory)"
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Profile version (semver)"
    },
    "extends": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true,
      "default": [],
      "description": "Profiles or presets to extend (npm package or relative path)"
    },
    "overrides": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true,
      "default": [],
      "description": "Local rule overrides (relative paths)"
    },
    "defaults": {
      "type": "object",
      "properties": {
        "io": {
          "$ref": "https://schemas.kb-labs.dev/profile/profile.io.json"
        },
        "diff": {
          "$ref": "https://schemas.kb-labs.dev/profile/profile.diff.json"
        },
        "capabilities": {
          "$ref": "https://schemas.kb-labs.dev/profile/profile.cap.json"
        }
      },
      "additionalProperties": false,
      "default": {},
      "description": "Default allow/deny, diff-ignore, capabilities applied to all products unless overridden"
    },
    "products": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "config": {
            "type": "string"
          },
          "io": {
            "$ref": "https://schemas.kb-labs.dev/profile/profile.io.json"
          },
          "diff": {
            "$ref": "https://schemas.kb-labs.dev/profile/profile.diff.json"
          },
          "capabilities": {
            "$ref": "https://schemas.kb-labs.dev/profile/profile.cap.json"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      },
      "description": "Per-product configuration (review, tests, docs, assistant)"
    },
    "discovery": {
      "type": "object",
      "properties": {
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false,
      "description": "Hints for discovery: package globs and languages"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Free-form metadata for human or tooling use"
    }
  },
  "additionalProperties": false
}