{
  "$id": "https://schemas.kb-labs.dev/profile/rules.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KB Labs Rule",
  "type": "object",
  "required": [
    "id",
    "title",
    "severity"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "severity": {
      "enum": [
        "info",
        "warn",
        "error"
      ]
    },
    "selectors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    },
    "rationale": {
      "type": "string"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    }
  },
  "additionalProperties": false
}